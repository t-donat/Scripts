<OperationButton@Button>:
    font_size: 32
    background_color: (0.172, 0.51, 0.79, 1)

<NumberButton@Button>:
    font_size: 32
    background_color: (0.78, 0.97, 0.77, 0.9)

<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 6
    padding: 10
    spacing: 10

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout:
        spacing: 10
        OperationButton:
            text: "^"
            on_press: calculator.add_operand(self.text)

        OperationButton:
            text: "("
            on_press: calculator.add_open_bracket()

        OperationButton:
            text: ")"
            on_press: calculator.add_char(self.text)

        OperationButton:
            text: "1/x"
            on_press: calculator.calculate_inverse(entry.text)

        OperationButton:
            text: "/"
            on_press: calculator.add_operand(self.text)

    BoxLayout:
        spacing: 10
        OperationButton:
            text: "n!"
            on_press: calculator.factorial(entry.text)

        NumberButton:
            text: "7"
            on_press: calculator.add_char(self.text)

        NumberButton:
            text: "8"
            on_press: calculator.add_char(self.text)

        NumberButton:
            text: "9"
            on_press: calculator.add_char(self.text)

        OperationButton:
            text: "*"
            on_press: calculator.add_operand(self.text)

    BoxLayout:
        spacing: 10

        OperationButton
            text: "\u03C0"
            on_press: calculator.add_pi()

        NumberButton:
            text: "4"
            on_press: calculator.add_char(self.text)

        NumberButton:
            text: "5"
            on_press: calculator.add_char(self.text)

        NumberButton:
            text: "6"
            on_press: calculator.add_char(self.text)

        OperationButton:
            text: "-"
            on_press: calculator.add_operand(self.text)

    BoxLayout:
        spacing: 10
        OperationButton:
            text: "e"
            on_press: calculator.add_euler()

        NumberButton:
            text: "1"
            on_press: calculator.add_char(self.text)

        NumberButton:
            text: "2"
            on_press: calculator.add_char(self.text)

        NumberButton:
            text: "3"
            on_press: calculator.add_char(self.text)

        OperationButton:
            text: "+"
            on_press: calculator.add_operand(self.text)

    BoxLayout:
        spacing: 10
        OperationButton:
            text: "CE"
            on_press: calculator.clear_all()
        OperationButton:
            text: "del"
            on_press: calculator.del_char()

        NumberButton:
            text: "0"
            on_press: calculator.add_char(self.text)

        OperationButton:
            text: "."
            on_press: calculator.add_operand(self.text)

        Button:
            font_size: 32
            text: "="
            background_color: (0.95, 0.15, 0.075, 1)
            on_press: calculator.calculate(entry.text)